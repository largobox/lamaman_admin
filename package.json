    "license": "MIT",
    "private": true,
    "scripts": {
        "d": "webpack serve",
        "build": "webpack build",
        "lint": "prettier --write . && eslint . --fix"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-errors": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.1",
        "styled-components": "^6.1.6"
    },
    "devDependencies": {
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "html-webpack-plugin": "^5.6.0",
        "prettier": "^3.1.1",
        "ts-loader": "^9.5.1",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "dist/",
            "webpack.config.js"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "import"
        ],
        "root": true,
        "rules": {
            "import/newline-after-import": [
                "error",
                {
                    "count": 2
                }
            ]
        }
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "jsxSingleQuote": true
    }
