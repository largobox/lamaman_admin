{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "paths": {
            "app-utils": ["app/utils/index"],
            "validations": ["app/utils/validations"],
            "system-utils": ["system/utils/index"],
            "common-types": ["app/utils/commonTypes"],
            "hooks": ["app/hooks/index"],
            "hooks/*": ["app/hooks/*"],
            "layouts": ["app/layouts/index"],
            "uikit": ["app/components/uikit/index"],
            "unique": ["app/components/unique/index"],
            "pages": ["app/pages/index"],
            "themes": ["app/themes/index"],
            "schemas": ["app/utils/schemas/index"]
        },
        "target": "es6"
    },
    "include": ["./system/utils/**/*", "./app/**/*"]
}
